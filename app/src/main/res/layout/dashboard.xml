<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="0dp" android:id="@+id/hpCard"
                                       android:layout_height="wrap_content" android:layout_marginTop="56dp"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                       app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp">

        <TextView android:layout_width="match_parent" android:textColor="@color/colorAccent"
                  android:textSize="120sp"
                  android:textAlignment="center"
                  android:layout_margin="32dp"
                  android:layout_height="wrap_content" android:id="@+id/hpText"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_width="0dp"
                                       android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                       android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
                                       android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                       android:padding="16dp"
                                       app:layout_constraintTop_toBottomOf="@+id/hpCard">

        <GridLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:padding="16dp"
                    android:id="@+id/effectsGrid">

        </GridLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>